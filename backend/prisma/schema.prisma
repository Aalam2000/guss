generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

//
// ───── ENUMS ────────────────────────────────────────────────────────────────
//

enum Role {
  user
  admin
  nikita
}

//
// ───── USERS ────────────────────────────────────────────────────────────────
//

model User {
  id           String            @id @default(uuid())
  username     String            @unique
  passwordHash String
  role         Role              @default(user)
  createdAt    DateTime          @default(now())
  updatedAt    DateTime          @updatedAt

  scores       UserRoundScore[]
}

//
// ───── ROUNDS ───────────────────────────────────────────────────────────────
//

model Round {
  id         String            @id @default(uuid())
  startAt    DateTime
  endAt      DateTime
  createdAt  DateTime          @default(now())

  scores     UserRoundScore[]
}

//
// ───── SCORES ───────────────────────────────────────────────────────────────
//

model UserRoundScore {
  id        String   @id @default(uuid())
  userId    String
  roundId   String
  taps      Int      @default(0)
  points    Int      @default(0)   // с учетом правила: каждый 11-й тап +10

  user      User     @relation(fields: [userId], references: [id])
  round     Round    @relation(fields: [roundId], references: [id])

  @@unique([userId, roundId])     // один пользователь — одна запись в раунде
}
